
@model Eticaret.Models.Siparis
@{
    ViewBag.Title = "SiparisTamamla";
}



<div class="p-5 mb-4 text-bg-dark rounded-3 text-center" style="background-color:antiquewhite; margin:20px">
    <h1></h1>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="dl-horizontal">
            <h4>Teslimat Bilgileri</h4>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.Ad, htmlAttributes: new { @class = "control-label col-md-2" })
