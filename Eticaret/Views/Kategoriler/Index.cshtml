@model IEnumerable<Eticaret.Models.Kategoriler>

@{
    ViewBag.Title = "Index";
}

<h2>Kategoriler</h2>

<p>
    @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAdi)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.KategoriID }, new { @class = "btn btn-success btn-sm" })
                @Html.ActionLink("Detay", "Details", new { id = item.KategoriID }, new { @class = "btn btn-warning btn-sm" })
                @Html.ActionLink("Sil", "Delete", new { id = item.KategoriID }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>
